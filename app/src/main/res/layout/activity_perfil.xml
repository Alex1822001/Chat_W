<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity"
    android:background="@color/black">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/usuario_vic_id"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/usuario_vic_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usuario_vic_id"
        android:padding="10dp"
        android:background="@drawable/textos"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Nombre"/>
    <TextView
        android:id="@+id/usuario_vic_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usuario_vic_nombre"
        android:padding="10dp"
        android:background="@drawable/textos"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Estado"/>
    <TextView
        android:id="@+id/usuario_vic_ciudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usuario_vic_estado"
        android:padding="10dp"
        android:background="@drawable/textos"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Estado"/>
    <TextView
        android:id="@+id/usuario_vic_edad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usuario_vic_ciudad"
        android:padding="10dp"
        android:background="@drawable/textos"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Estado"/>
    <Button
        android:id="@+id/usuario_vic_enviarmensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usuario_vic_edad"
        android:background="@drawable/botonblanco"
        android:layout_margin="15dp"
        android:text="ENVIAR MENSAJE"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/usuario_vic_cancelar_mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usuario_vic_enviarmensaje"
        android:background="@drawable/botonblanco"
        android:layout_margin="15dp"
        android:text="CANCELAR"
        android:textSize="15dp"
        android:visibility="gone"
        android:textStyle="bold"/>
</RelativeLayout>
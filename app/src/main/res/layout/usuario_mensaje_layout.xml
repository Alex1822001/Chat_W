<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mensaje_imagen_perfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/recibir_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/mensaje_imagen_perfil"
        android:background="@drawable/recibir_mensaje_layout"
        android:text="Recibir Mensaje"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="14dp"/>
    <ImageView
        android:id="@+id/mensajeenviarimagen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/mensajerecibirimagen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/enviar_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/recibir_mensaje"
        android:background="@drawable/enviar_mensaje_layout"
        android:text="Enviar mensaje usuario"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:padding="10dp"/>



</RelativeLayout>
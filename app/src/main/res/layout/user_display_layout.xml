<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/textos"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_imagen_perfil"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:src="@drawable/logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/user_nombre"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="nombre"
                android:textAlignment="textStart"
                android:textSize="18dp"
                android:layout_marginStart="5dp"/>
            <ImageView
                android:id="@+id/user_activo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/activo"
                android:visibility="gone"/>
        </LinearLayout>
            <TextView
            android:id="@+id/user_ciudad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ciudad"
            android:textAlignment="textStart"
            android:textSize="18dp"
            android:layout_marginStart="5dp"/>
            <TextView
            android:id="@+id/user_estado"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textAlignment="textStart"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/Solicitud_aceptarB"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Aceptar"
                    android:textAllCaps="false"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/Solicitud_cancelarB"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"
                    android:background="@color/purple_200"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
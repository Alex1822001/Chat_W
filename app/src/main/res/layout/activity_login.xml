<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido \n por favor REGISTRATRE"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/Imagen"
        android:layout_below="@+id/texto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />
    <EditText
        android:id="@+id/numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/Imagen"
        android:layout_marginTop="30dp"
        android:background="@drawable/textos"
        android:padding="10dp"
        android:hint="Ingresa numero"
        android:inputType="phone"/>
    <Button
        android:id="@+id/enviarT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/numero"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/botones"
        android:text="Enviar numero"
        android:textSize="18dp"/>
    <EditText
        android:id="@+id/codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/Imagen"
        android:layout_marginTop="30dp"
        android:hint="Ingresa codigo"
        android:background="@drawable/textos"
        android:padding="10dp"
        android:visibility="gone"
        android:inputType="phone"/>
    <Button
        android:id="@+id/enviarC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/codigo"
        android:layout_marginTop="20dp"
        android:text="Enviar codigo"
        android:textColor="#ffffff"
        android:background="@drawable/botones"
        android:visibility="gone"
        android:textSize="18dp"/>
</RelativeLayout>
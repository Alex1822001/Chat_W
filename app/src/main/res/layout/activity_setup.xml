<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity">
    <include
        android:id="@+id/toolbarSetup"
        layout="@layout/toolbar_principal"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarSetup">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/nombreSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:layout_below="@+id/imagenSetup"
        android:padding="10dp"
        android:hint="Nombre"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:id="@+id/CidadSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:layout_below="@+id/nombreSetup"
        android:padding="10dp"
        android:hint="Ciudad"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:id="@+id/estadoSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:layout_below="@+id/CidadSetup"
        android:padding="10dp"
        android:hint="Estado"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:id="@+id/edadSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:layout_below="@+id/estadoSetup"
        android:padding="10dp"
        android:hint="Edad"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagenSetup"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"/>
    <Button
        android:id="@+id/guardarSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botones"
        android:textColor="#ffffff"
        android:layout_below="@+id/edadSetup"
        android:padding="10dp"
        android:text="GUARDAR"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>